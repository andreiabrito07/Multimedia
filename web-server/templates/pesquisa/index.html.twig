{% extends 'base.html.twig' %}
{% block title %}ISPMedia
{% endblock %}
{% block bodyID %}page-top
{% endblock %}
{% block body %}
	<nav class="navbar navbar-expand navbar-light bg-white static-top osahan-nav sticky-top">
		&nbsp;&nbsp;
		<button class="btn btn-link btn-sm text-secondary order-1 order-sm-0" id="sidebarToggle">
			<i class="fas fa-bars"></i>
		</button>
		&nbsp;&nbsp;
		<a class="navbar-brand mr-1" href="{{path('home')}}"><img class="img-fluid" alt="" src="{{asset('static/img/logo.png')}}"></a>
		<!-- Navbar Search -->
		<form method="GET" action="{{path('pesquisa')}}" class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-5 my-2 my-md-0 osahan-navbar-search" >
			<div class="input-group">
				<input type="text" name="q" class="form-control" placeholder="Search for...">
				<div class="input-group-append">
					<button class="btn btn-light" type="button">
						<i class="fas fa-search"></i>
					</button>
				</div>
			</div>
		</form>
		<!-- Navbar -->
		<ul class="navbar-nav ml-auto ml-md-0 osahan-right-navbar">
			<li class="nav-item dropdown no-arrow osahan-right-navbar-user">
				{% if app.user %}
					<a class="nav-link dropdown-toggle user-dropdown-link" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						<img alt="Avatar" src="{{asset('static/img/user.png')}}">
						{{ app.user.userIdentifier }}
					</a>
					<div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
						<a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
							<i class="fas fa-fw fa-sign-out-alt"></i>
							&nbsp; Logout</a>
					</div>
				{% else %}
					<a class="nav-link" href="login">Login</a>
				{% endif %}
			</li>
		</ul>
	</nav>
	<div
		id="wrapper">
		<!-- Sidebar -->
		<ul class="sidebar navbar-nav">
			<li class="nav-item active">
				<a class="nav-link" href="{{path('home')}}">
					<i class="fas fa-fw fa-home"></i>
					<span>Home</span>
				</a>
			</li>
			{% if app.user %}
				<li class="nav-item">
					<a class="nav-link" href="{{path('upload')}}">
						<i class="fas fa-fw fa-cloud-upload-alt"></i>
						<span>Upload Video</span>
					</a>
				</li>
			{% endif %}
		</ul>
		<div id="content-wrapper">
			<div class="container-fluid">
				<div class="video-block section-padding">
					<div class="row">
						<div class="col-md-12">
							<div class="main-title">
								<h6>Todos os Videos</h6>
							</div>
						</div>
						{% for record in result %}
						<div class="col-xl-3 col-sm-6 mb-3">
							<div class="video-card history-video">
								<div class="video-card-image">
									<a class="play-icon" href="{{path('video_page', {slug: record.id})}}">
										<i class="fas fa-play-circle"></i>
									</a>
									<a href="#"><img class="img-fluid" src="{{ asset('static/img/v1.png') }}" alt=""></a>
								</div>
								<div class="video-card-body">
									<div class="video-title">
										<a href="#">{{ record.titulo }}</a>
									</div>
								</div>
							</div>
						</div>
                  {% endfor %}
					</div>
				</div>
			</div>
			<!-- /.container-fluid -->
			<!-- Sticky Footer -->
			<footer class="sticky-footer">
				<div class="container">
					<div class="row no-gutters">
						<div class="col-lg-6 col-sm-6">
							<p class="mt-1 mb-0">&copy; Copyright 2018
								<strong class="text-dark">Vidoe</strong>. All Rights Reserved<br>
								<small class="mt-0 mb-0">Made with
									<i class="fas fa-heart text-danger"></i>
									by
									<a class="text-primary" target="_blank" href="https://askbootstrap.com/">Ask Bootstrap</a>
								</small>
							</p>
						</div>
						<div class="col-lg-6 col-sm-6 text-right">
							<div class="app">
								<a href="#"><img alt="" src="{{asset('static/img/google.png')}}"></a>
								<a href="#"><img alt="" src="{{asset('static/img/apple.png')}}"></a>
							</div>
						</div>
					</div>
				</div>
			</footer>
		</div>
		<!-- /.content-wrapper -->
	</div>
	<!-- /#wrapper -->
{% endblock %}
